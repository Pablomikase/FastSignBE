/*Administrador*/
/*Creación de la tabla de credenciales de administradores y sus datos*/
CREATE TABLE `fastsign`.`admin` (
  `id` INT NOT NULL AUTO_INCREMENT ,
  `username` VARCHAR(50) NOT NULL UNIQUE,
  `password` VARCHAR(255) NOT NULL ,
  `dni` VARCHAR(9) NOT NULL ,
  `firstname` VARCHAR(255) NOT NULL ,
  `surName` VARCHAR(255) NOT NULL,
   PRIMARY KEY (`id`)) ENGINE = InnoDB;


/*Company*/
/*Creación de la tabla de credenciales de administradores y sus datos*/
CREATE TABLE `fastsign`.`company` (
  `id` INT NOT NULL AUTO_INCREMENT ,
  `admin_id` INT,
  `companyName` VARCHAR(255) NOT NULL UNIQUE,
  `cifNumber` VARCHAR(9) NOT NULL ,
  `companyState` VARCHAR(255) NOT NULL ,
  `companyDirection` VARCHAR(255) NOT NULL ,
  `companyArea` VARCHAR(255) NOT NULL,
   PRIMARY KEY (`id`),
   FOREIGN KEY (`admin_id`) REFERENCES `admin` (`id`)
   ) ENGINE = InnoDB;

